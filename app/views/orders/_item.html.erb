<% @order_total = 0 %>
<% @order.line_items.each do |item| %>
  <% @order_total += item.total_price %>

  <tr>
    <td>
      <%= image_tag item.product.image.tiny %>
    </td>
    <td>
      <h4><%= item.product.name %></h4>
      <br>
      <p><%= item.product.description %></p>
    </td>
    <td>
      <%= item.product.price %>
    </td>
    <td>
      <%= item.quantity %>
    </td>
    <td>
      <%= item.total_price %>
    </td>
  </tr>

<% end %>
